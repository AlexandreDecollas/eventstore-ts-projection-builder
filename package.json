{
  "name": "eventstore-ts-projection-builder",
  "version": "1.0.18",
  "description": "A helper for building eventstore projection with typescript",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "test": "jest"
  },
  "keywords": [
    "eventstore",
    "projection",
    "eventsourcing",
    "typescript"
  ],
  "repository": "https://github.com/AlexandreDecollas/eventstore-ts-projection-builder",
  "author": "Alexandre Decollas <alexandre.decollas.pro@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "prettier": "^2.5.1",
    "serialize-javascript": "^6.0.2",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.4.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/serialize-javascript": "^5.0.4",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\-?spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc-node/jest",
        {
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "swc": {
            "sourceMaps": "inline"
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
