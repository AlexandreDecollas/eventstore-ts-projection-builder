{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest"
    ]
  },
  "moduleNameMapper": {
    "^eventstore-ts-projection-builder$": "<rootDir>/src/index.ts"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**"
  ]
}
